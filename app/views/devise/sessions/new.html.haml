%h2 Sign in
= form_for(resource, :as => :admin_user, :url => session_path(:admin_user)) do |f|
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Sign in"
%p
  Not an admin?
  = link_to "register your self with Facebook", user_omniauth_authorize_path(:facebook)
= render "links"